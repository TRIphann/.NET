<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jumparena</title>
    <link rel="stylesheet" href="~/css/customer-layout.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>

<div class="customer-layout">
    <!-- Sidebar -->
    <nav class="customer-sidebar">
        <div class="sidebar-header">
            <h2><i class="fas fa-ticket-alt"></i> Jumparena</h2>
        </div>
        <ul class="sidebar-menu">
            <li>
                <a href="@Url.Action("BookTickets", "Customer")" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "BookTickets" ? "active" : "")">
                    <i class="fas fa-ticket-alt"></i>
                    <span>Đặt vé Jumparena</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("MyTickets", "Customer")" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "MyTickets" ? "active" : "")">
                    <i class="fas fa-clipboard-list"></i>
                    <span>Vé của tôi</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Profile", "Customer")" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")">
                    <i class="fas fa-user"></i>
                    <span>Hồ sơ cá nhân</span>
                </a>
            </li>
        </ul>
        <div class="sidebar-footer">
            <a href="@Url.Action("Logout", "Account")" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i>
                <span>Đăng xuất</span>
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="customer-content">
        @if (TempData["Success"] != null)
        {
            <div class="alert-custom alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert-custom alert-error">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            </div>
        }

        @RenderBody()
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@RenderSection("Scripts", required: false)

</body>
</html>
