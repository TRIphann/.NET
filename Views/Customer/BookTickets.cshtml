<!-- Modal đặt vé -->
<div id="bookingModal" class="modal" style="display: none;">
    <div class="modal-content" style="max-width: 600px;">
        <span class="close" onclick="closeBookingModal()">&times;</span>
        <h2 style="color: #667eea; margin-bottom: 20px;"><i class="fas fa-ticket-alt"></i> Đặt vé</h2>
        
        <form id="bookingForm">
            <input type="hidden" id="packageId" />
            
            <div class="form-group">
                <label><i class="fas fa-box"></i> Gói dịch vụ</label>
                <input type="text" id="packageName" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label><i class="fas fa-calendar"></i> Ngày sử dụng</label>
                <input type="date" id="bookingDate" class="form-control" required />
            </div>

            <div class="form-group">
                <label><i class="fas fa-clock"></i> Chọn ca</label>
                <div class="time-slots-section">
                    <div id="timeSlotsList"></div>
                </div>
            </div>

            <div class="form-group">
                <label><i class="fas fa-users"></i> Số người</label>
                <input type="number" id="numberOfPeople" class="form-control" min="1" value="1" required />
            </div>

            <div class="form-group">
                <label><i class="fas fa-concierge-bell"></i> Dịch vụ thêm (tùy chọn)</label>
                <div id="extraServicesList"></div>
            </div>

            <div class="package-price" style="background: #f8f9ff; padding: 20px; border-radius: 12px; margin: 20px 0;">
                <h3 style="color: #667eea; margin-bottom: 15px;">Tổng thanh toán</h3>
                <span class="price-amount" id="totalAmount">0₫</span>
            </div>

            <button type="button" class="btn-book" onclick="confirmBooking()">
                <i class="fas fa-check-circle"></i> Xác nhận đặt vé
            </button>
        </form>
    </div>
</div>

@section Scripts {
<script>
    let selectedPackageId = null;
    let selectedPackagePrice = 0;
    let selectedTimeSlot = null;

    function selectPackage(packageId, packageName, price) {
        selectedPackageId = packageId;
        selectedPackagePrice = price;
        
        document.getElementById('packageId').value = packageId;
        document.getElementById('packageName').value = packageName;
        
        // Set minimum date to today
        const today = new Date().toISOString().split('T')[0];
        document.getElementById('bookingDate').value = today;
        document.getElementById('bookingDate').min = today;
        
        // Load time slots and services
        loadTimeSlots();
        loadExtraServices();
        
        // Show modal
        document.getElementById('bookingModal').style.display = 'block';
        
        updateTotal();
    }

    function loadTimeSlots() {
        fetch('/Customer/GetTimeSlots')
            .then(response => response.json())
            .then(slots => {
                const container = document.getElementById('timeSlotsList');
                container.innerHTML = slots.map(slot => `
                    <div class="time-slot" onclick="selectTimeSlot(${slot.maCa}, this)">
                        <i class="fas fa-clock"></i> ${slot.tenCa}
                        <br><small>${slot.gioBatDau} - ${slot.gioKetThuc}</small>
                    </div>
                `).join('');
            })
            .catch(error => {
                console.error('Error loading time slots:', error);
            });
    }

    function selectTimeSlot(slotId, element) {
        // Remove previous selection
        document.querySelectorAll('.time-slot').forEach(el => el.classList.remove('selected'));
        // Add new selection
        element.classList.add('selected');
        selectedTimeSlot = slotId;
    }

    function loadExtraServices() {
        fetch('/Customer/GetExtraServices')
            .then(response => response.json())
            .then(services => {
                const container = document.getElementById('extraServicesList');
                container.innerHTML = services.map(s => `
                    <div class="service-item" style="padding: 10px; border-bottom: 1px solid #eee;">
                        <label style="display: flex; align-items: center; cursor: pointer;">
                            <input type="checkbox" value="${s.maDVThem}" data-price="${s.donGia}" 
                                   onchange="updateTotal()" style="margin-right: 10px;" />
                            <span style="flex: 1;">
                                <strong>${s.tenDV}</strong> - <span style="color: #667eea;">${formatCurrency(s.donGia)}</span>
                                ${s.moTa ? '<br><small style="color: #666;">' + s.moTa + '</small>' : ''}
                            </span>
                        </label>
                    </div>
                `).join('');
            })
            .catch(error => {
                console.error('Error loading extra services:', error);
            });
    }

    function updateTotal() {
        const numberOfPeople = parseInt(document.getElementById('numberOfPeople').value) || 1;
        let total = selectedPackagePrice * numberOfPeople;
        
        // Add extra services
        document.querySelectorAll('#extraServicesList input[type="checkbox"]:checked').forEach(cb => {
            total += parseFloat(cb.dataset.price) || 0;
        });
        
        document.getElementById('totalAmount').textContent = formatCurrency(total);
    }

    function confirmBooking() {
        if (!selectedTimeSlot) {
            alert('Vui lòng chọn ca!');
            return;
        }

        const bookingData = {
            packageId: selectedPackageId,
            timeSlotId: selectedTimeSlot,
            bookingDate: document.getElementById('bookingDate').value,
            numberOfPeople: document.getElementById('numberOfPeople').value,
            extraServices: Array.from(document.querySelectorAll('#extraServicesList input[type="checkbox"]:checked'))
                .map(cb => cb.value).join(',')
        };

        // Redirect to payment page
        window.location.href = `/Customer/PaymentJumparena?packageId=${bookingData.packageId}&timeSlotId=${bookingData.timeSlotId}&bookingDate=${bookingData.bookingDate}&numberOfPeople=${bookingData.numberOfPeople}&extraServices=${bookingData.extraServices}`;
    }

    function closeBookingModal() {
        document.getElementById('bookingModal').style.display = 'none';
    }

    function formatCurrency(amount) {
        return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
    }

    // Auto-update total when number of people changes
    document.addEventListener('DOMContentLoaded', function() {
        const numberOfPeopleInput = document.getElementById('numberOfPeople');
        if (numberOfPeopleInput) {
            numberOfPeopleInput.addEventListener('input', updateTotal);
        }
    });

    // Close modal when clicking outside
    window.onclick = function(event) {
        const modal = document.getElementById('bookingModal');
        if (event.target === modal) {
            closeBookingModal();
        }
    }
</script>
}
