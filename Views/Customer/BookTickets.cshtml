@model IEnumerable<QLDuLichRBAC_Upgrade.Models.Entities.GoiDichVu>

@{
    ViewData["Title"] = "Đặt vé - Jumparena";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<style>
    .jumparena-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 20px;
        text-align: center;
        margin: -20px -20px 40px -20px;
        border-radius: 0 0 30px 30px;
    }

    .jumparena-hero h1 {
        font-size: 3em;
        font-weight: bold;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }

    .jumparena-hero p {
        font-size: 1.3em;
        opacity: 0.95;
    }

    .package-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .package-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: 3px solid transparent;
    }

    .package-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(102, 126, 234, 0.3);
        border-color: #667eea;
    }

    .package-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px 20px;
        text-align: center;
    }

    .package-header.team {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .package-header.birthday {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .package-header.school {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }

    .package-name {
        font-size: 1.8em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .package-type {
        font-size: 0.95em;
        opacity: 0.9;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .package-body {
        padding: 30px 20px;
    }

    .package-price {
        text-align: center;
        margin-bottom: 25px;
    }

    .price-amount {
        font-size: 2.5em;
        font-weight: bold;
        color: #667eea;
        display: block;
    }

    .price-label {
        color: #666;
        font-size: 0.9em;
        margin-top: 5px;
    }

    .package-features {
        list-style: none;
        padding: 0;
        margin: 20px 0;
    }

    .package-features li {
        padding: 12px 0;
        border-bottom: 1px solid #f0f0f0;
        display: flex;
        align-items: center;
        color: #555;
    }

    .package-features li:last-child {
        border-bottom: none;
    }

    .package-features li i {
        color: #667eea;
        margin-right: 12px;
        font-size: 1.2em;
    }

    .package-info {
        display: flex;
        justify-content: space-around;
        background: #f8f9ff;
        padding: 15px;
        border-radius: 12px;
        margin: 20px 0;
    }

    .info-item {
        text-align: center;
    }

    .info-label {
        font-size: 0.85em;
        color: #666;
        display: block;
    }

    .info-value {
        font-size: 1.3em;
        font-weight: bold;
        color: #667eea;
        display: block;
        margin-top: 5px;
    }

    .btn-book {
        width: 100%;
        padding: 15px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.1em;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn-book:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
    }

    .activities-section {
        background: #f8f9ff;
        padding: 40px;
        border-radius: 20px;
        margin-top: 40px;
    }

    .activities-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }

    .activity-card {
        background: white;
        padding: 20px;
        border-radius: 15px;
        text-align: center;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .activity-card:hover {
        border-color: #667eea;
        transform: translateY(-5px);
    }

    .activity-icon {
        font-size: 3em;
        color: #667eea;
        margin-bottom: 15px;
    }

    .activity-name {
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }

    .activity-category {
        font-size: 0.85em;
        color: #999;
    }

    .time-slots-section {
        background: white;
        padding: 30px;
        border-radius: 20px;
        margin-top: 20px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

    .time-slot {
        display: inline-block;
        padding: 12px 25px;
        background: #f0f0f0;
        border-radius: 10px;
        margin: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .time-slot:hover {
        background: #667eea;
        color: white;
        border-color: #667eea;
    }

    .time-slot.selected {
        background: #667eea;
        color: white;
        border-color: #764ba2;
    }
</style>

<div class="jumparena-hero">
    <h1><i class="fas fa-ticket-alt"></i> JUMPARENA</h1>
    <p>Khu vui chơi trampoline & thử thách hấp dẫn nhất Việt Nam</p>
</div>

<div class="package-grid">
    @if (Model != null && Model.Any())
    {
        @foreach (var goi in Model)
        {
            <div class="package-card">
                <div class="package-header">
                    <div class="package-name">@goi.TenGoi</div>
                    @if (goi.ThoiGian.HasValue)
                    {
                        <div class="package-type">@goi.ThoiGian ph�t</div>
                    }
                </div>
                
                <div class="package-body">
                    <div class="package-price">
                        <span class="price-amount">@goi.Gia.ToString("N0")₫</span>
                    </div>

                    <div class="package-info">
                        @if (goi.ThoiGian.HasValue)
                        {
                            <div class="info-item">
                                <span class="info-label">Th?i gian</span>
                                <span class="info-value">@goi.ThoiGian ph�t</span>
                            </div>
                        }
                        @if (goi.SoLuotChoi.HasValue)
                        {
                            <div class="info-item">
                                <span class="info-label">Số lượt chơi</span>
                                <span class="info-value">@goi.SoLuotChoi lượt</span>
                            </div>
                        }
                    </div>

                    <ul class="package-features">
                        @if (!string.IsNullOrEmpty(goi.MoTa))
                        {
                            @foreach (var feature in goi.MoTa.Split(',').Take(5))
                            {
                                <li><i class="fas fa-check-circle"></i> @feature.Trim()</li>
                            }
                        }
                    </ul>

                    <button type="button" class="btn-book" onclick="selectPackage(@goi.MaGoi, '@goi.TenGoi', @goi.Gia)">
                        <i class="fas fa-shopping-cart"></i> Đặt vé ngay
                    </button>
                </div>
            </div>
        }
    }
    else
    {
        <div style="grid-column: 1 / -1; text-align: center; padding: 40px;">
            <i class="fas fa-inbox" style="font-size: 3em; color: #ccc;"></i>
            <p style="margin-top: 20px; color: #999;">Hiện tại chưa có gói dịch vụ nào.</p>
        </div>
    }
</div>

