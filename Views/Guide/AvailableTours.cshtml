@model IEnumerable<QLDuLichRBAC_Upgrade.Models.Entities.Tour>

    @{
    ViewData["Title"] = "Danh sách Tour";
    Layout = "~/Views/Shared/_GuideLayout.cshtml";
    }

    <div class="content-header">
        <h1><i class="fas fa-map-marked-alt"></i> Danh sách Tour có thể đăng ký</h1>
    </div>

    <div class="tour-grid">
        @if (Model != null && Model.Any())
    {
        @foreach (var tour in Model)
        {
            var imagePath = tour.Tour_Anh?.FirstOrDefault()?.DuongDan ?? "default.jpg";
            var salary = tour.Gia * 0.5m; // Lương = 50% giá tour

        <div class="tour-card">
            <div class="tour-card-image">
                <img src="~/images/@imagePath"
                     alt="@tour.TenTour"
                     onerror="this.src='/images/default.jpg'" />
            </div>

            <div class="tour-card-body">
                <h3 class="tour-card-title">@tour.TenTour</h3>

                <div class="tour-card-info">
                    <i class="fas fa-calendar-alt"></i>
                    <strong>Khởi hành:</strong> @tour.NgayBatDau.ToString("dd/MM/yyyy")
                </div>

                <div class="tour-card-info">
                    <i class="fas fa-calendar-check"></i>
                    <strong>Kết thúc:</strong> @tour.NgayKetThuc.ToString("dd/MM/yyyy")
                </div>

                <div class="tour-card-info">
                    <i class="fas fa-map-marker-alt"></i>
                    <strong>Địa điểm:</strong>
                    @if (tour.Tour_DiaDiem != null && tour.Tour_DiaDiem.Any())
                        {
                    @string.Join(", ", tour.Tour_DiaDiem.Take(2).Select(dd => dd.DiaDiem?.TenDD ?? "N/A"))
                    @if (tour.Tour_DiaDiem.Count() > 2)
                            {
                    <span>...</span>
                            }
                        }
                </div>

                <div class="tour-price">
                    <div>
                        <div class="price-label">Giá tour:</div>
                        <div class="price-amount">@tour.Gia.ToString("N0") ₫</div>
                    </div>
                </div>

                <div class="salary-info">
                    <div class="salary-label">Lương hướng dẫn viên (50%):</div>
                    <div class="salary-amount">@salary.ToString("N0") ₫</div>
                </div>

                <button class="btn btn-primary btn-block"
                        onclick="registerTour(@tour.MaTour, '@tour.TenTour')">
                    <i class="fas fa-plus-circle"></i> Đăng ký hướng dẫn
                </button>
            </div>
        </div>
        }
    }
    else
    {
        <div style="grid-column: 1/-1; text-align: center; padding: 40px;">
            <i class="fas fa-inbox" style="font-size: 4rem; color: #ccc; margin-bottom: 20px;"></i>
            <h3 style="color: #999;">Hiện không có tour nào để đăng ký</h3>
        </div>
    }
    </div>

    @section Scripts {
        <script>
        function registerTour(tourId, tourName) {
            if (!confirm('Bạn có chắc muốn đăng ký làm hướng dẫn viên cho tour "' + tourName + '"?')) {
                return;
            }

            $.ajax({
                url: '@Url.Action("RegisterForTour", "Guide")',
                type: 'POST',
                data: { tourId: tourId },
                success: function(response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Có lỗi xảy ra. Vui lòng thử lại!');
                }
            });
        }
        </script>
    }
